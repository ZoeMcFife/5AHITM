        "sns.scatterplot(x=x_test.squeeze(), y=y_test, label='Test points');\n",
        "plt.xlabel(\"x\");\n",
        "plt.ylabel(\"y\");\n",
        "plt.title(\"Data generated from $1 + 0.5x + 2x^3$\");\n",
        "\n",
        "# Plot true function\n",
        "x_p = np.linspace(-1,1,100);\n",
